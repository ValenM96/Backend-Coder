<div class="row">
    <div class="col-12">
        <h1 class="mb-4">{{title}}</h1>
        
        {{#if error}}
            <div class="alert alert-danger" role="alert">
                {{error}}
            </div>
        {{/if}}

        {{#if hasProducts}}
            <div class="row">
                {{#each products}}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card product-card h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{this.title}}</h5>
                                <p class="card-text">{{this.description}}</p>
                                <p class="card-text">
                                    <strong>Código:</strong> {{this.code}}<br>
                                    <strong>Categoría:</strong> {{this.category}}<br>
                                    <strong>Stock:</strong> {{this.stock}} unidades
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h5 text-success mb-0">${{this.price}}</span>
                                    {{#if this.status}}
                                        <span class="badge bg-success status-badge">Disponible</span>
                                    {{else}}
                                        <span class="badge bg-danger status-badge">No disponible</span>
                                    {{/if}}
                                </div>
                                {{#if this.thumbnails.length}}
                                    <div class="mt-2">
                                        <small class="text-muted">{{this.thumbnails.length}} imagen(es)</small>
                                    </div>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <div class="text-center py-5">
                <h3 class="text-muted">No hay productos disponibles</h3>
                <p class="text-muted">Los productos aparecerán aquí cuando se agreguen al catálogo.</p>
                <a href="/realtimeproducts" class="btn btn-primary">
                    Ir a Gestión en Tiempo Real
                </a>
            </div>
        {{/if}}
    </div>
</div>