        {{/if}}
    </div>
</div>

<div class="modal fade" id="confirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalTitle">Confirmar acci√≥n</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="confirmModalBody">
                ¬øEst√°s seguro de que quieres realizar esta acci√≥n?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="confirmModalButton">Confirmar</button>
            </div>
        </div>
    </div>
</div>

<script>
    const cartId = '{{cartId}}';
    const confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'));
    let pendingAction = null;

    async function updateQuantity(productId, currentQuantity, change) {
        let newQuantity;
        
        if (change === 0) {
            newQuantity = parseInt(currentQuantity);
        } else {
            newQuantity = parseInt(currentQuantity) + change;
        }

        if (newQuantity < 1) {
            removeProduct(productId);
            return;
        }

        try {
            const response = await fetch(`/api/carts/${cartId}/products/${productId}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ quantity: newQuantity })
            });

            if (response.ok) {
                location.reload();
            } else {
                const error = await response.json();
                showAlert(`‚ùå ${error.error}`, 'danger');
            }
        } catch (error) {
            showAlert(`‚ùå Error: ${error.message}`, 'danger');
        }
    }

    function removeProduct(productId) {
        const productCard = document.querySelector(`[data-product-id="${productId}"]`);
        const productTitle = productCard.querySelector('.card-title').textContent;
        
        document.getElementById('confirmModalTitle').textContent = 'Eliminar Producto';
        document.getElementById('confirmModalBody').innerHTML = `
            ¬øEst√°s seguro de que quieres eliminar <strong>${productTitle}</strong> de tu carrito?
        `;
        
        pendingAction = async () => {
            try {
                const response = await fetch(`/api/carts/${cartId}/products/${productId}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    confirmModal.hide();
                    showAlert('‚úÖ Producto eliminado del carrito', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    const error = await response.json();
                    showAlert(`‚ùå ${error.error}`, 'danger');
                }
            } catch (error) {
                showAlert(`‚ùå Error: ${error.message}`, 'danger');
            }
        };
        
        confirmModal.show();
    }

    function clearCart() {
        document.getElementById('confirmModalTitle').textContent = 'Vaciar Carrito';
        document.getElementById('confirmModalBody').innerHTML = `
            ¬øEst√°s seguro de que quieres eliminar <strong>todos los productos</strong> de tu carrito?
            Esta acci√≥n no se puede deshacer.
        `;
        
        pendingAction = async () => {
            try {
                const response = await fetch(`/api/carts/${cartId}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    confirmModal.hide();
                    showAlert('‚úÖ Carrito vaciado exitosamente', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    const error = await response.json();
                    showAlert(`‚ùå ${error.error}`, 'danger');
                }
            } catch (error) {
                showAlert(`‚ùå Error: ${error.message}`, 'danger');
            }
        };
        
        confirmModal.show();
    }
    function shareCart() {
        const cartUrl = window.location.href;
        
        if (navigator.share) {
            navigator.share({
                title: 'Mi Carrito de Compras',
                text: 'Mira mi carrito de compras',
                url: cartUrl
            });
        } else {
            navigator.clipboard.writeText(cartUrl).then(() => {
                showAlert('üìã Enlace del carrito copiado al portapapeles', 'info');
            }).catch(() => {
                showAlert(`üì§ Comparte este enlace: ${cartUrl}`, 'info');
            });
        }
    }

    function proceedToCheckout() {
        showAlert('üöß Funcionalidad de pago en desarrollo', 'warning');
    }

    async function createNewCart() {
        try {
            const response = await fetch('/api/carts', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });

            if (response.ok) {
                const newCart = await response.json();
                window.location.href = `/carts/${newCart.payload.id}`;
            } else {
                showAlert('‚ùå Error al crear carrito', 'danger');
            }
        } catch (error) {
            showAlert(`‚ùå Error: ${error.message}`, 'danger');
        }
    }

    document.getElementById('confirmModalButton').addEventListener('click', () => {
        if (pendingAction) {
            pendingAction();
            pendingAction = null;
        }
    });

    function showAlert(message, type) {
        const alertDiv = document.createElement('div');
        alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
        alertDiv.innerHTML = `
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        
        document.querySelector('.container').insertBefore(alertDiv, document.querySelector('.row'));
        
        setTimeout(() => {
            if (alertDiv.parentNode) {
                alertDiv.remove();
            }
        }, 5000);
    }
</script>

